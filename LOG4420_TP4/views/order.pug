extends layout.pug
append head
  script(type='text/javascript', src='../scripts/additional-methods.min.js')
  script(type='text/javascript', src='../scripts/messages_fr.js')
  script(type='text/javascript', src='../scripts/order.js', charset='utf-8')

block content
  main
  article
    h1 Commande
    form#order-form(action='/confirmation', method='post')
      section
        h2 Contact
        .col
          .row
            .col.order-field.left-field
              label(for='first-name') Prénom
              input#first-name.form-control.bordered(name='firstname', type='text', placeholder='Prénom', required='')
            .col.order-field
              label(for='last-name') Nom
              input#last-name.form-control.bordered(name='lastname', type='text', placeholder='Nom', required='')
          .row
            .col.order-field.left-field
              label(for='email') Adresse courriel
              input#email.form-control.bordered(name='email', type='email', placeholder='Adresse courriel', required='')
            .col.order-field
              label(for='phone') Téléphone
              input#phone.form-control.bordered(name='phone', type='tel', placeholder='###-###-####', required='')
      section
        h2 Paiement
        .row
          .col.order-field.left-field
            label(for='credit-card') Numéro de carte de crédit
            input#credit-card.form-control.bordered(name='creditCard', type='text', placeholder='•••• •••• •••• ••••', required='')
          .col.order-field
            label(for='credit-card-expiry') Expiration (mm/aa)
            input#credit-card-expiry.form-control.bordered(name='creditCardExpiry', type='text', placeholder='mm/aa', required='')
      button.btn.payBtn(type='submit') Payer
